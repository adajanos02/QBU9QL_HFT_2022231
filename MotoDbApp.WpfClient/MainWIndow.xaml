<Window x:Class="MotoDbApp.WpfClient.MainWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoDbApp.WpfClient"
        mc:Ignorable="d"
        Title="MainWIndow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Content="Select a Database" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="50" Margin="10" Padding="10"/>
        <Button Content="Riders" Grid.Row="1" FontSize="35" Margin="10" Padding="10" Click="Button_Click_2"/>
        <Button Content="Motorcycles" Grid.Row="2" FontSize="35" Margin="10" Padding="10" Click="Button_Click_1"/>
        <Button Content="Brands" Grid.Row="3" FontSize="35" Margin="10" Padding="10" Click="Button_Click"/>
    </Grid>
</Window>
